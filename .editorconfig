# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sh,bash}]
end_of_line = lf

[*.py]
end_of_line = lf
indent_style = space
indent_size = 4

[*.{yml,yaml}]
end_of_line = lf
indent_style = space
indent_size = 2

[*.json]
end_of_line = lf
indent_style = space
indent_size = 2

[Makefile]
end_of_line = lf
indent_style = tab

