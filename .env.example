# =============================================================================
# CashPilot Environment Variables
# =============================================================================
# Copy this file to .env and update values for your environment
# NEVER commit .env file to version control

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# Default values for local Docker development
POSTGRES_USER=cashpilot
POSTGRES_PASSWORD=dev_password_change_in_prod
POSTGRES_DB=cashpilot_dev

# Full connection string (used by SQLAlchemy)
DATABASE_URL=postgresql+asyncpg://cashpilot:dev_password_change_in_prod@db:5432/cashpilot_dev

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
# Session secret key for signed cookies (change in production!)
SESSION_SECRET_KEY=dev-secret-key-change-in-production

# For production, set to "production" to enable HTTPS-only cookies
# ENVIRONMENT=production

# -----------------------------------------------------------------------------
# Development
# -----------------------------------------------------------------------------
# Set to true to enable auto-reload on code changes
UVICORN_RELOAD=true

# -----------------------------------------------------------------------------
# Backups (create .env.backup separately for production backups)
# -----------------------------------------------------------------------------
# Get public DATABASE_URL from Railway dashboard → PostgreSQL → Connect → Public Network
# DATABASE_PUBLIC_URL=postgresql://postgres:PASSWORD@switchyard.proxy.rlwy.net:PORT/railway

# Add to .env (if you want to test Sentry locally)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx