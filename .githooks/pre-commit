#!/usr/bin/env bash
# Hook de git que ejecuta linters dentro de Docker y bloquea el commit si fallan.

echo "ğŸ” Running linters in Docker (ruff, black --check, isort --check-only)..."
if ! make lint; then
  echo ""
  echo "âŒ Pre-commit failed. Run 'make fmt' to auto-fix, then commit again."
  exit 1
fi

